#!/usr/bin/env php
<?php

ini_set('display_errors', true);
error_reporting(E_ALL);
set_time_limit(0);

// Always start in the project directory
chdir(dirname(__DIR__));

// Init autoloading
require 'autoload.php';

/*
 * Slim Application
 */
$app = new \Cloud\Slim\Slim();

// cli environment
$app->container->singleton('environment', function ($c) {
    $environment = \Slim\Environment::mock([
        'REQUEST_METHOD' => 'GET',
        'SCRIPT_NAME' => $_SERVER['SCRIPT_NAME'],
        'PATH_INFO' => '',
        'QUERY_STRING' => '',
        'SERVER_NAME' => gethostname(),
        'SERVER_PORT' => 80,
        'ACCEPT' => 'text/plain',
        'ACCEPT_LANGUAGE' => 'en-US',
        'ACCEPT_CHARSET' => 'utf-8',
        'USER_AGENT' => 'cli',
        'REMOTE_ADDR' => '127.0.0.1',
        'slim.url_scheme' => 'cli',
        'slim.input' => STDIN,
        'slim.errors' => STDERR,
    ]);

    return $environment;
});
$app->config('log.level', \Slim\Log::NOTICE);

// console middleware
$app->add(new \Cloud\Console\Middleware());

// loader
$loader = new \Cloud\Slim\Loader\Loader();
$loader->load('config')
       ->load('helper');

// middleware
$app->add($loader);
$app->add(new \Cloud\Slim\Middleware\Doctrine());

// run
$app->run();
